{% trans_default_domain 'FOSUserBundle' %}

<div class="uk-text-center uk-margin-top">

<h1 >Connexion administrateur Unitaide.org</h1>

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="uk-margin">
        <div class="uk-inline">
            <span class="uk-form-icon" uk-icon="icon: user"></span>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="uk-input" placeholder="Login" />
        </div>
    </div>

    <div class="uk-margin">
        <div class="uk-inline">
            <span class="uk-form-icon" uk-icon="icon: lock"></span>
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="uk-input" placeholder="Password" />
        </div>
    </div>

    <div class="uk-margin uk-grid-small uk-child-width-auto">
        <label><input class="uk-checkbox" type="checkbox" checked> {{ 'security.login.remember_me'|trans }}</label>
    </div>

    <button type="submit" id="_submit" name="_submit" class="uk-button uk-button-primary">{{ 'security.login.submit'|trans }}</button>
</form>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
</div>
