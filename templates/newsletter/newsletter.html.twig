<h2>Inscrivez vous Ã  notre newsletter</h2>
<div class="animate-box">
    <div class="row">
        {{ form_start(form, {'action': path('newsletter'), 'method': 'POST'}) }}
        <div class="col-md-6">
            <div class="form-group">
                {{ form_widget(form.name, {'attr': {'style': 'height: 42px;'}}) }}
                {{ form_errors(form.name, {'attr': {'style': 'height: 42px;'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="S'inscrire" class="btn btn-primary">
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    {% for message in app.flashes('message') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

</div>