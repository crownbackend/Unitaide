{% extends 'base.html.twig' %}

{% block title 'Blog' %}

{% block body %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center animate-box ">
            <div class="heading-section">
                <h2>Nos projets</h2>
            </div>
        </div>
    </div>

    <div id="fh5co-work-section">
        <div class="container">
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-6 text-center animate-box">
                        <div class="work" style="background-image: url({{ asset('images/miniature/'~article.imageNameMiniature) }});">
                            <a href="#" class="view">
                                <span>{{ article.title }}</span>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}